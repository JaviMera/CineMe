<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="movie"
            type="com.merajavier.cineme.movies.MovieDataItem" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/details_movie_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/details_movie_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/details_movie_background_poster"
                    android:contentDescription="@string/details_movie_background_poster_description"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    app:showPoster="@{movie.backdropPath}"
                    tools:srcCompat="@drawable/background_poster" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/details_movie_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/MovieTitle.Landscape"
                android:text="@{movie.title}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/details_movie_cardview"
                app:layout_constraintTop_toTopOf="@id/details_movie_cardview"
                tools:text="Venom: Let there be carnage" />

            <TextView
                android:id="@+id/details_movie_overview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/MovieOverview.Landscape"
                android:text="@{movie.overview}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/details_movie_cardview"
                app:layout_constraintTop_toBottomOf="@id/details_movie_title"
                tools:text="After finding a host body in investigative reporter Eddie Brock, the alien symbiote must face a new enemy, Carnage, the alter ego of serial killer Cletus Kasady." />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/details_movie_genres"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@id/details_movie_break_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/details_movie_cardview"
                app:layout_constraintTop_toBottomOf="@id/details_movie_overview"
                app:layout_constraintVertical_bias="0.48000002"
                tools:itemCount="3"
                tools:listitem="@layout/details_movie_genre_chip" />

            <TextView
                android:id="@+id/details_movie_break_line"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="8dp"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/details_movie_cardview"
                app:layout_constraintTop_toBottomOf="@id/details_movie_genres" />

            <com.merajavier.cineme.details.UserScoreView
                android:id="@+id/movie_details_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/details_movie_cardview"
                app:layout_constraintEnd_toStartOf="@+id/movie_details_add_to_favorite"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toEndOf="@+id/details_movie_cardview"
                app:layout_constraintTop_toBottomOf="@id/details_movie_break_line"
                app:showUserScore="@{movie.voteAverage}" />

            <com.merajavier.cineme.details.AddToFavoriteView
                android:id="@+id/movie_details_add_to_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/movie_details_score"
                app:layout_constraintBottom_toBottomOf="@id/movie_details_score"
                app:layout_constraintEnd_toStartOf="@+id/movie_details_user_votes"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/movie_details_score" />

            <com.merajavier.cineme.details.UserVotesView
                android:id="@+id/movie_details_user_votes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@id/movie_details_score"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/movie_details_add_to_favorite"
                app:layout_constraintTop_toTopOf="@+id/movie_details_score"
                app:showUserVotes="@{movie.voteCount}" />

            <TextView
                android:id="@+id/detail_movies_top_cast_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BaseTitle.Details.Landscape"
                android:text="@string/detail_movies_top_cast_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_movie_cardview" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/details_movie_actors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_movies_top_cast_title"
                tools:itemCount="3"
                tools:listitem="@layout/details_movie_actor_item" />

            <TextView
                android:id="@+id/details_movie_director_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BaseTitle.Details.Landscape"
                android:text="@string/details_movie_director_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_movie_actors" />

            <TextView
                android:id="@+id/details_movie_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MovieInformation.Directors.Landscape"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_movie_director_title"
                tools:text="David Fincher, Lio Messi, Francella" />

            <TextView
                android:id="@+id/details_movie_writers_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BaseTitle.Details.Landscape"
                android:text="@string/details_movie_writers_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_movie_director" />

            <TextView
                android:id="@+id/details_movie_writers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/MovieInformation.Writers.Landscape"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_movie_writers_title"
                tools:text="David Fincher, Lio Messi, Francella" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>