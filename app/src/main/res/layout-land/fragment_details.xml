<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="movie"
            type="com.merajavier.cineme.movies.MovieDataItem" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/details_movie_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/details_movie_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/details_movie_background_poster"
                    android:contentDescription="@string/details_movie_background_poster_description"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    app:showPoster="@{movie.backdropPath}"
                    tools:srcCompat="@drawable/background_poster" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/details_movie_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:padding="3dp"
                android:text="@{movie.title}"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/details_movie_cardview"
                app:layout_constraintTop_toTopOf="@id/details_movie_cardview"
                tools:text="Venom: Let there be carnage" />

            <TextView
                android:id="@+id/details_movie_overview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:maxLines="6"
                android:scrollHorizontally="true"
                android:text="@{movie.overview}"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/details_movie_cardview"
                app:layout_constraintTop_toBottomOf="@id/details_movie_title"
                tools:text="After finding a host body in investigative reporter Eddie Brock, the alien symbiote must face a new enemy, Carnage, the alter ego of serial killer Cletus Kasady." />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/details_movie_genres"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@id/details_movie_break_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/details_movie_cardview"
                app:layout_constraintTop_toBottomOf="@id/details_movie_overview"
                app:layout_constraintVertical_bias="0.48000002"
                tools:itemCount="3"
                tools:listitem="@layout/details_movie_genre_chip" />

            <TextView
                android:id="@+id/details_movie_break_line"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintBottom_toTopOf="@id/details_movie_user_score_progress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/details_movie_cardview"
                app:layout_constraintTop_toBottomOf="@id/details_movie_genres"
                app:layout_constraintVertical_bias="0.18" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/details_movie_user_score_progress"
                showAverageProgress="@{movie.voteAverage}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="8dp"
                android:indeterminate="false"
                android:max="100"
                app:indicatorColor="@color/track_color"
                app:indicatorDirectionCircular="clockwise"
                app:layout_constraintBottom_toTopOf="@id/details_movie_user_score_title"
                app:layout_constraintEnd_toStartOf="@+id/details_movie_favorite"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toEndOf="@+id/details_movie_cardview"
                app:trackColor="@color/colorSecondaryDark"
                tools:progress="60" />

            <TextView
                android:id="@+id/details_movie_user_score_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/details_movie_user_score_progress"
                app:layout_constraintEnd_toEndOf="@+id/details_movie_user_score_progress"
                app:layout_constraintStart_toStartOf="@+id/details_movie_user_score_progress"
                app:layout_constraintTop_toTopOf="@+id/details_movie_user_score_progress"
                app:showVoteAverage="@{movie.voteAverage}"
                tools:text="60%" />

            <TextView
                android:id="@+id/details_movie_user_score_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_movies_user_score_text"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="@id/details_movie_cardview"
                app:layout_constraintEnd_toEndOf="@id/details_movie_user_score_progress"
                app:layout_constraintStart_toStartOf="@id/details_movie_user_score_progress" />

            <ImageView
                android:id="@+id/details_movie_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/details_movie_favorite_description"
                android:src="@drawable/movie_favorite_not_selected"
                app:layout_constraintBottom_toBottomOf="@id/details_movie_user_score_progress"
                app:layout_constraintEnd_toStartOf="@+id/details_movie_user_votes"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/details_movie_user_score_progress"
                app:layout_constraintTop_toTopOf="@id/details_movie_user_score_progress" />

            <TextView
                android:id="@+id/details_movie_user_favorite_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_movie_user_favorite_text"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="@+id/details_movie_user_score_title"
                app:layout_constraintEnd_toEndOf="@id/details_movie_favorite"
                app:layout_constraintStart_toStartOf="@id/details_movie_favorite"                 />

            <TextView
                android:id="@+id/details_movie_user_votes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:text="@{String.valueOf(movie.voteCount)}"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="@+id/details_movie_favorite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/details_movie_favorite"
                app:layout_constraintTop_toTopOf="@+id/details_movie_favorite"
                tools:text="1,900" />

            <TextView
                android:id="@+id/details_movie_user_votes_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details_movie_user_votes_text"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintBottom_toBottomOf="@+id/details_movie_user_favorite_title"
                app:layout_constraintEnd_toEndOf="@id/details_movie_user_votes"
                app:layout_constraintStart_toStartOf="@id/details_movie_user_votes" />

            <TextView
                android:id="@+id/detail_movies_top_cast_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/detail_movies_top_cast_title"
                android:textAlignment="textStart"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_movie_cardview" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/details_movie_actors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detail_movies_top_cast_title"
                tools:itemCount="3"
                tools:listitem="@layout/details_movie_actor_item" />

            <TextView
                android:id="@+id/details_movie_director_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/details_movie_director_title"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_movie_actors" />

            <TextView
                android:id="@+id/details_movie_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_movie_director_title"
                tools:text="David Fincher, Lio Messi, Francella" />

            <TextView
                android:id="@+id/details_movie_writers_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/details_movie_writers_title"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_movie_director" />

            <TextView
                android:id="@+id/details_movie_writers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_movie_writers_title"
                tools:text="David Fincher, Lio Messi, Francella" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>