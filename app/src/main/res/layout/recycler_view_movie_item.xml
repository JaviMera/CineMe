<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="movie"
            type="com.merajavier.cineme.movies.MovieDataItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/recycler_view_movie_item_margin"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/movie_item_poster"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/movie_item_poster_description"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/venom" />

        <TextView
            android:id="@+id/movie_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@{movie.title}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/movie_item_poster"
            app:layout_constraintTop_toTopOf="@+id/movie_item_poster"
            tools:text="Venom: Let There be Carnage (2021)" />

        <TextView
            android:id="@+id/movie_item_release_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@{movie.releaseDate}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/movie_item_poster"
            app:layout_constraintTop_toBottomOf="@+id/movie_item_title"
            tools:text="10/01/2021" />

        <TextView
            android:id="@+id/movie_item_vote_average"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="@{String.valueOf(movie.voteAverage)}"
            app:layout_constraintBottom_toBottomOf="@+id/movie_item_poster"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/movie_item_poster"
            app:layout_constraintTop_toBottomOf="@+id/movie_item_release_date"
            tools:text="8.4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>