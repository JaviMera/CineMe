<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="actorDetail"
            type="com.merajavier.cineme.cast.ActorDetailDataItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".cast.ActorFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/actor_details_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardPreventCornerOverlap="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/actor_details_profile_image"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                app:showActorImageProfile="@{actorDetail.images}"
                tools:srcCompat="@drawable/keanu_reaves" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/actor_details_biography"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:maxLines="6"
            android:text="@{actorDetail.biography}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/actor_details_card"
            app:layout_constraintTop_toTopOf="@+id/actor_details_card"
            android:ellipsize="end"
            tools:text="@string/actor_biography" />

        <TextView
            android:id="@+id/actor_details_birthdate_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/actor_details_card"
            app:layout_constraintStart_toEndOf="@+id/actor_details_card"
            app:layout_constraintTop_toBottomOf="@+id/actor_details_biography"
            android:text="@string/actor_details_birthdate_born_title"/>

        <TextView
            android:id="@+id/actor_details_birthdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:showBirthdate="@{actorDetail.birthday}"
            app:layout_constraintBaseline_toBaselineOf="@+id/actor_details_birthdate_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/actor_details_birthdate_title"
            tools:text="May 1, 1962" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>