<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_movies">
    <fragment
        android:id="@+id/navigation_movies"
        android:name="com.merajavier.cineme.movies.MovieListFragment"
        android:label="@string/movies_fragment_title"
        tools:layout="@layout/fragment_movies"/>
    <fragment
        android:id="@+id/navigation_tv_shows"
        android:name="com.merajavier.cineme.shows.TVShowListFragment"
        android:label="@string/tv_shows_fragment_title"
        tools:layout="@layout/fragment_t_v_show_list" />
    <fragment
        android:id="@+id/navigation_login"
        android:name="com.merajavier.cineme.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_navigation_login_to_userFragment"
            app:destination="@id/userFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/userFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/userFragment"
        android:name="com.merajavier.cineme.login.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" />
</navigation>